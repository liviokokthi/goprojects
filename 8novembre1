func conta(s,p string) int{
for	!=-1{
	i:= strings.Index(s,p)
	if i==-1 {break}
	s=s(i+1:)
	c++
	Println("la mia stringa ora Ã¨ : ",s) //debugging, mostro all'interno del ciclo cosa succede
	}
	return c
}

func main() {
	scanner:=bufio.NewScanner(os.Stdin)
	scanner.scan()
	pagliaio:=scanner.Text()
	scanner.scan()
	ago:=scanner.Text()
	Println("La Stringa",ago,"compare",conta(pagliaio,ago),"volte in ",pagliaio)

